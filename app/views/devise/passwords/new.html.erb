<div class="max-w-xs mx-auto mt-20 p-4 bg-white rounded-lg shadow-lg">
  <h2 class="text-center text-lg font-bold mb-4">비밀번호 찾기</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, "이메일", class: "block mb-1 text-center" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border p-2", style: "display: block; margin: 0 auto;", required: true %>
    </div>

    <div>
      <%= f.submit "비밀번호 재설정 메일 받기", class: "w-full bg-yellow-300 py-2" %>
    </div>
  <% end %>

  <div class="flex justify-center items-center mt-4 text-sm">
    <%= link_to "로그인으로 돌아가기", new_user_session_path, class: "w-full bg-gray-300 py-2 text-center block rounded text-black" %>
  </div>
</div>
