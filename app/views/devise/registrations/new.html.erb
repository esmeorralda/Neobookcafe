<div class="flex justify-center items-center min-h-screen ">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-center mb-6">회원가입</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#efe9df]" %>
      </div>

      <div>
        <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", required: true,
            class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#efe9df]" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
            class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#efe9df]" %>
      </div>

      <div>
        <%= f.label :name, "사용자 이름", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, autocomplete: "name", required: true,
            class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#efe9df]" %>
      </div>

      <div class="space-y-2">
        <%= f.submit "회원가입", 
            class: "w-full text-white font-bold py-2 px-4 rounded hover:opacity-90",
            style: "background-color: #7b5845;" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "이미 계정이 있으신가요?", new_session_path(resource_name),
          class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
