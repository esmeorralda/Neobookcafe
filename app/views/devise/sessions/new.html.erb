<div class="flex justify-center items-center min-h-screen" style="background-color: rgba(230, 225, 215, 0.7);">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8 login-form-container">
    <h2 class="login-form-title">로그인</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div>
        <%= f.label :email, "이메일", class: "login-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "login-form-input" %>
      </div>

      <div>
        <%= f.label :password, "비밀번호", class: "login-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
            class: "login-form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="login-form-remember">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "로그인 상태 유지", class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="login-form-actions">
        <%= f.submit "로그인", class: "login-form-submit" %>
        <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "login-form-link" %>
      </div>

    <% end %>

    <div class="login-form-register">
    
      <%= link_to "계정이 없으신가요? 회원가입", new_registration_path(resource_name), class: "login-form-link" %>
    </div>
  </div>
</div>

<style>
html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

  .login-form-container {
    color: #5a4a2a;
    background-color: rgba(255, 255, 255, 0.95);
  }

  .login-form-title {
    margin-bottom: 20px;
    font-weight: bold;
    font-size: 20px;
    text-align: center;
    text-shadow: 1px 1px 0 #d7d2c1;
  }

  .login-form-label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: #7c6243;
  }

  .login-form-input {
    width: 100%;
    padding: 10px 12px;
    margin-bottom: 15px;
    border: 1.8px solid #a5947b;
    border-radius: 6px;
    font-size: 15px;
    box-sizing: border-box;
    background-color: #faf7ef;
    color: #5a4a2a;
    transition: border-color 0.3s;
  }

  .login-form-input:focus {
    border-color: #7c6243;
    outline: none;
    background-color: #fff;
  }

  .login-form-remember {
    margin-bottom: 15px;
    color: #5a4a2a;
  }

  .login-form-actions {
    margin-bottom: 10px;
  }

  .login-form-submit {
    width: 100%;
    background-color: #7c6243;
    border: none;
    padding: 12px 0;
    font-size: 17px;
    color: #f7f3e9;
    font-weight: 600;
    border-radius: 6px;
    cursor: pointer;
    box-shadow: 0 3px 5px rgba(124, 98, 67, 0.6);
    transition: background-color 0.3s;
  }

  .login-form-submit:hover {
    background-color: #5a4a2a;
  }

  .login-form-link {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 14px;
    color: #7c6243;
    text-decoration: underline;
    margin-top: 6px;
  }

  .login-form-register {
    margin-top: 20px;
    text-align: center;
  }
</style>
