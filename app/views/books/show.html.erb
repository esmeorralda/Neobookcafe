<div class="relative max-w-4xl mx-auto space-y-10 px-6 mt-10">
  <!-- 상단 영역: 제목과 버튼을 flex로 분리 -->
  <div class="flex justify-between items-start">
    <!-- 왼쪽: 제목, 저자, 진행률 -->
    <div>
      <div class="flex items-center space-x-2 mb-4"> <!-- 제목과 저자 사이 간격 추가 -->
        <h1 class="text-2xl font-bold whitespace-nowrap"><%= @book.title %></h1>
        <p class="text-sm text-gray-600 whitespace-nowrap self-end">
          <%= @book.author.present? ? @book.author : "책 저자 정보 없음"  %>
        </p>
      </div>

      <% total_pages = @book.total_pages || 0 %>
      <% current_page = @book.current_page || 0 %>

      <!-- 쪽수 및 진행률 정보를 왼쪽 정렬하고 제목과 간격 띄우기 -->
      <div class="flex items-center text-sm" style="color: #815e4e; font-weight: 350;">
        <% if @book.current_page.present? && @book.total_pages.present? && @book.total_pages > 0 %>
          <span><%= @book.current_page %>쪽 · <%= number_to_percentage((@book.current_page.to_f / @book.total_pages * 100).round, precision: 0) %></span>
          <span id="progress1" class="ml-2 inline-block" style="width: 20px; height: 20px;" 
            data-current-page="<%= current_page %>" 
            data-total-pages="<%= total_pages %>">
          </span>
        <% else %>
          페이지 정보 없음
        <% end %>
      </div>
    </div>

    <!-- 오른쪽: 버튼들만 별도 div -->
    <div class="flex flex-col space-y-2">
      <%= link_to "메모 추가", new_book_note_path(@book), class: "bg-[#644536] text-white px-4 py-2 text-sm" %>
      <%= link_to "책 편집", edit_book_path(@book), class: "border px-4 py-2 text-sm text-center" %>
    </div>
  </div>

  <!-- 노트 메모지 그리드 -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <% @book.notes.order(created_at: :desc).each do |note| %>
      <%= link_to note_path(note), class: "block" do %>
        <div class="relative text-base shadow-md p-6 pt-10 pb-8 w-full aspect-square font-serif overflow-hidden hover:shadow-lg transition"
         style="background-color: <%= note.color  %>; clip-path: polygon(0 0, 100% 0, 100% 95%, 95% 100%, 0 100%);">
          
          <!-- 페이지 정보 -->
          <div class="absolute top-3 left-3 text-[13px] text-gray-600 font-medium">
            <% if note.page_from && note.page_to %>
              <%= note.page_from %>~<%= note.page_to %>쪽
            <% elsif note.page_from %>
              <%= note.page_from %>쪽
            <% end %>
          </div>

          <!-- 날짜 -->
          <div class="absolute top-3 right-3 text-[13px] text-gray-600">
            <%= note.created_at.strftime('%d/%m/%Y') %>
          </div>

          <!-- 메모 내용 (잘림 표시) -->
          <p class="whitespace-pre-line leading-relaxed text-gray-800 overflow-hidden text-ellipsis line-clamp-8">
            <%= note.memo %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/progressbar.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.getElementById('progress1');
    if (!container || typeof ProgressBar === 'undefined') return;

    const currentPage = Number(container.dataset.currentPage) || 0;
    const totalPages = Number(container.dataset.totalPages) || 0;

    const progress = (currentPage > 0 && totalPages > 0) 
      ? Math.min(currentPage / totalPages, 1)
      : 0;

    const bar = new ProgressBar.Circle(container, {
      strokeWidth: 12,
      color: '#815e4e',
      trailColor: '#fff',
      trailWidth: 1,
      easing: 'easeInOut',
      duration: 1400,
    });

    bar.animate(progress);
  });
</script>
