<div class="max-w-xs mx-auto mt-20 p-4 bg-white rounded-lg shadow-lg">
  <h2 class="text-center text-lg font-bold mb-4">로그인</h2>

  <%= form_with url: login_path, method: :post, local: true, class: "flex flex-col space-y-4" do |f| %>
    <div>
      <%= f.label :email, "이메일", class: "block mb-1 text-center" %>
      <%= f.email_field :email, class: "border p-2", style: "display: block; margin: 0 auto;", required: true %>
    </div>

    <div>
      <%= f.label :password, "비밀번호", class: "block mb-1 text-center" %>
      <%= f.password_field :password, class: "border p-2", style: "display: block; margin: 0 auto;", required: true %>
    </div>

    <div class="space-y-2">
      <%= f.submit "로그인", class: "w-full bg-yellow-300 py-2" %>
      <button type="button" class="w-full bg-gray-300 py-2">비밀번호 찾기</button>
    </div>
  <% end %>

  <div class="text-center my-4 text-xs text-gray-500">또는</div>

  <div class="space-y-2">
    <button class="w-full bg-yellow-300 py-2">카톡으로 로그인</button>
    <button class="w-full bg-gray-300 py-2">구글로 로그인</button>
  </div>

  <div class="flex justify-center items-center mt-4 text-sm">
    <%= link_to "계정이 없으신가요?", signup_path, class: "w-full bg-gray-300 py-2 text-center block rounded text-black" %>
  </div>
</div>
