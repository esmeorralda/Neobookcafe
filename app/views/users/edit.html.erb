    <div class="hover:text-[#3e2f23]">좋아요 한 글</div>
    <div class="hover:text-[#3e2f23]">저장 한 글</div>
    <div class="hover:text-[#3e2f23]">댓글/토론</div>
  </div>

  <% 2.times do %>
