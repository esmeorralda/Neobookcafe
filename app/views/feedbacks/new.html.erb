<div class="max-w-4xl mx-auto mt-10 p-8">
<h1 class="text-2xl font-bold mb-4">피드백 및 문의</h1>

<%= form_with model: @feedback, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, "제목", class: "block font-semibold mb-1" %>
    <%= form.text_field :title, class: "w-full border p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :content, "내용", class: "block font-semibold mb-1" %>
    <%= form.text_area :content, rows: 6, class: "w-full border p-2 rounded" %>
  </div>

  <%= form.submit "제출하기", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>

</div>
