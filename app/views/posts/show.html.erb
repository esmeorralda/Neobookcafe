    <% @post.post_blocks.order(:position).each do |block| %>
      <div id="comment-form-<%= block.id %>" class="hidden mt-2 mb-10 rounded p-4 bg-[#f9f6f2]">
        <% comments = Comment.where(post_block_id: block.id).order(created_at: :asc) %>
        <% if comments.any? %>
          <div class="space-y-3 overflow-y-auto pb-3" style="max-height: 500px;">
            <% comments.each do |comment| %>
              <div class="comment border-b border-[#d1c4b2] pb-2 mb-2">
                <!-- ìƒë‹¨: ìœ ì €ì´ë¦„ / ë‚ ì§œ + í•˜íŠ¸ -->
                <div class="flex justify-between items-start">
                  <p class="font-semibold text-gray-800 text-sm" style="font-family: 'Noto Serif KR', serif;"><%= comment.user.name %></p>
                  <div class="flex items-center space-x-2" style="line-height: 1.25; font-size: 0.75rem; font-family: 'Inter', sans-serif;">
                    <p class="text-xs text-gray-500"><%= comment.created_at.strftime('%Yë…„ %-mì›” %-dì¼ %H:%M') %></p>
                    <%= render partial: 'comment_like', locals: { likeable: comment } %>
                    <div class="flex items-center space-x-2">
                      <%= button_tag 'í¸ì§‘',
                          type: 'button',
                          class: 'edit-comment-button text-xs hover:underline interactive',
                          data: { comment_id: comment.id },
                          style: "font-family: 'Inter', sans-serif;" %>
                      <%= link_to 'ì‚­ì œ', comment_path(comment), method: :delete, data: { confirm: 'ì •ë§ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?' }, class: 'text-xs text-red-500 hover:underline' %>
                    </div>
                  </div>
                </div>

                <!-- ë³¸ë¬¸ -->
                <p id="comment-content-<%= comment.id %>" class="comment-content text-sm mt-2 text-gray-700">
                  <%= comment.content %>
                </p>

                <%
                  line_height = 22
                  max_chars_per_line = 50
                  content_text = (comment.content || "").to_s
                  lines = content_text.split("\n")
                  total_lines = lines.inject(0) do |acc, line|
                    if line.strip.empty?
                      acc + 1
                    else
                      line_len = line.gsub("\t", "    ").length
                      acc + (line_len / max_chars_per_line.to_f).ceil
                    end
                  end
                  estimated_lines = [2, total_lines].max
                  initial_height = estimated_lines * line_height
                %>

                <div id="comment-edit-form-<%= comment.id %>" class="comment-edit-form hidden mt-2">
                  <%= form_with model: comment, url: comment_path(comment), method: :patch do |f| %>
                   <%= f.text_area :content,
    value: content_text,
    style: "height: #{initial_height}px; min-height: #{2*line_height}px; resize: vertical;",
    class: "w-full p-2 border border-[#d1c4b2] rounded text-sm focus:outline-none focus:ring-1 focus:ring-[#b88b65] mb-2 auto-resize-textarea" %>

                    <div class="w-full flex justify-end space-x-2">
                      <%= f.submit 'ì €ì¥', class: "px-2 py-1 bg-[#5d3b2e] text-white rounded text-xs cursor-pointer" %>
                      <button type="button" class="cancel-edit-btn px-2 py-1 bg-gray-300 rounded text-xs cursor-pointer">ì·¨ì†Œ</button>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm italic mt-2">ëŒ“ê¸€ì´ ì—†ìŠµë‹ˆë‹¤.</p>
        <% end %>

        <!-- âš ï¸ ì¤‘ë³µ id ë°©ì§€: í¼ idë¥¼ ë¸”ë¡ë³„ë¡œ ê³ ìœ í•˜ê²Œ -->
        <%= form_with model: Comment.new, url: post_comments_path(@post), local: true, html: { id: "hidden-comment-form-for-#{block.id}" } do |f| %>
          <%= f.hidden_field :post_block_id, value: block.id %>
          <%= f.hidden_field :post_id, value: @post.id %>
          <div class="mb-1 comment-content">
            <%= f.text_area :content, placeholder: "ëŒ“ê¸€ì„ ì‘ì„±í•´ì£¼ì„¸ìš”", rows: 3, style: "min-height: 6rem;", class: "auto-resize-textarea w-full p-2 border border-[#d1c4b2] rounded text-sm focus:outline-none focus:ring-1 focus:ring-[#b88b65]" %>
          </div>
          <div class="flex justify-end mt-0">
            <button type="submit" class="px-4 py-2 bg-[#5d3b2e] text-white rounded text-sm" style="font-family: 'Inter', sans-serif;">
              ëŒ“ê¸€ ë“±ë¡
            </button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const postContainer = document.getElementById('post-container');
  const commentSidebar = document.getElementById('comment-sidebar');
  const commentSidebarContent = document.getElementById('comment-sidebar-content');
  const closeBtn = document.getElementById('close-comment-sidebar');

  function isHidden(el) { return !el || el.offsetParent === null; }
  function autoResize(el) {
    if (!el) return;
    el.style.height = 'auto';
    el.style.height = el.scrollHeight + 'px';
  }

  document.addEventListener('input', (e) => {
    const ta = e.target.closest('textarea.auto-resize-textarea');
    if (ta) autoResize(ta);
  });

  
  // JS ì¤€ë¹„ë¨ í‘œì‹œ â†’ .interactive ë³´ì´ê¸°
  document.documentElement.setAttribute('data-js-ready', '1');

  // ===== ë¸”ë¡ë³„ ëŒ“ê¸€ ë³´ê¸°: ì‚¬ì´ë“œë°” ì—´ê³ , ìˆ¨ê¹€ í…œí”Œë¦¿ ë³µì œ =====
  document.querySelectorAll('.comment-view-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const blockId = btn.getAttribute('data-block-id');
      const commentForm = document.getElementById(`comment-form-${blockId}`);

      commentSidebar.classList.remove('hidden');
      postContainer.classList.add('grid-active');

      commentSidebarContent.innerHTML = '';
      if (!commentForm) {
        commentSidebarContent.innerHTML = '<p>ëŒ“ê¸€ì´ ì—†ìŠµë‹ˆë‹¤.</p>';
        return;
      }
      const clone = commentForm.cloneNode(true);
      clone.classList.remove('hidden');
      commentSidebarContent.appendChild(clone);

      // ë³´ì´ëŠ” textarea ìë™ ë¦¬ì‚¬ì´ì¦ˆ
      commentSidebarContent.querySelectorAll('textarea').forEach((ta) => autoResize(ta));

      // í´ë¡ ëœ í¼ AJAX ì œì¶œ
      const form = commentSidebarContent.querySelector('form');
      if (form) {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          const formData = new FormData(form);
          const token = document.querySelector('meta[name="csrf-token"]').content;
          try {
            const res = await fetch(form.action, {
              method: form.method.toUpperCase(),
              headers: { 'Accept': 'application/json', 'X-CSRF-Token': token },
              body: formData
            });
            if (!res.ok) {
              const err = await res.json().catch(() => ({}));
              const msg = (err.errors && err.errors.join(', ')) || 'ëŒ“ê¸€ ë“±ë¡ ì‹¤íŒ¨';
              throw new Error(msg);
            }
            alert('ëŒ“ê¸€ì´ ì„±ê³µì ìœ¼ë¡œ ë“±ë¡ë˜ì—ˆìŠµë‹ˆë‹¤.');
            window.location.reload();
          } catch (e2) {
            alert(e2.message || 'ëŒ“ê¸€ ë“±ë¡ ì‹¤íŒ¨');
          }
        });
      }
    });
  });

  // ì‚¬ì´ë“œë°” ë‹«ê¸°
  if (closeBtn) {
    closeBtn.addEventListener('click', () => {
      commentSidebar.classList.add('hidden');
      postContainer.classList.remove('grid-active');
      commentSidebarContent.innerHTML = '';
    });
  }

  // ===== ì´ë²¤íŠ¸ ìœ„ì„: í¸ì§‘/ì·¨ì†Œ/ë‹µê¸€ í† ê¸€ =====
  document.addEventListener('click', (e) => {
    // í¸ì§‘ ì‹œì‘
    const editBtn = e.target.closest('.edit-comment-button');
    if (editBtn) {
      const id = editBtn.dataset.commentId;
      const formWrap = document.getElementById(`comment-edit-form-${id}`);
      const contentWrap = document.getElementById(`comment-content-${id}`);
      if (contentWrap) contentWrap.classList.add('hidden');
      if (formWrap) {
        formWrap.classList.remove('hidden');
        requestAnimationFrame(() => {
          autoResize(formWrap.querySelector('textarea'));
        });
      }
      return;
    }

    // ì·¨ì†Œ
    const cancelBtn = e.target.closest('.cancel-edit-btn');
    if (cancelBtn) {
      const formWrap = cancelBtn.closest('.comment-edit-form');
      if (formWrap) {
        const id = formWrap.id.replace('comment-edit-form-', '');
        formWrap.classList.add('hidden');
        const contentWrap = document.getElementById(`comment-content-${id}`);
        if (contentWrap) contentWrap.classList.remove('hidden');
      }
      return;
    }

    // ëŒ€ëŒ“ê¸€ í† ê¸€
    const replyToggle = e.target.closest('.reply-toggle');
    if (replyToggle) {
      const id = replyToggle.getAttribute('data-comment-id');
      const container = document.getElementById(`reply-container-${id}`);
      if (!container) return;
      const hidden = container.classList.contains('hidden');
      if (hidden) {
        container.classList.remove('hidden');
        const count = container.querySelectorAll('.border-l-2').length;
        replyToggle.textContent = count === 0 ? 'ë‹µê¸€ ë‹¬ê¸°' : 'ëŒ€ëŒ“ê¸€ ë‹«ê¸°';
      } else {
        container.classList.add('hidden');
        const count = container.querySelectorAll('.border-l-2').length;
        replyToggle.textContent = count === 0 ? 'ë‹µê¸€ ë‹¬ê¸°' : `${count}ê°œì˜ ë‹µê¸€ ë³´ê¸°`;
      }
      return;
    }
  });

  // ë³´ì´ëŠ” textarea ìë™ ë¦¬ì‚¬ì´ì¦ˆ (ì´ˆê¸°)
  document.querySelectorAll('.auto-resize-textarea').forEach((ta) => {
    if (!isHidden(ta)) autoResize(ta);
  });
});
</script>
</body>
